# Snippet for tsconfig

priority -50

snippet tsconfig-json-umi "umi's tsconfig"
{
	"compilerOptions": {
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"importHelpers": true,
		"jsx": "preserve",
		"esModuleInterop": true,
		"sourceMap": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"allowSyntheticDefaultImports": true
	}
}
endsnippet

snippet tsconfig-json-base "base tsconfig"
{
	"compilerOptions": {
		"strict": true,
		"target": "ES5",
		"module": "ES2020",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"isolatedModules": true,
		"jsx": "react",
		"lib": [
			"ES2015",
			"ES2016",
			"ES2017",
			"ES2018",
			"ES2019",
			"ES2020",
			"ES2021",
			"ESNext",
			"DOM"
		],
		"types": ["jest", "node"]
	},
	"ts-node": {
		"compilerOptions": {
			"//": "ts-node does not support any module syntax other than commonjs",
			"module": "CommonJS"
		}
	}
}
endsnippet
